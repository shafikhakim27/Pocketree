@model ADproject.Models.DTOs.UserLoginDto

<div class="landing-container d-flex align-items-center justify-content-center">
    <div class="card login-card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5 p-5 bg-white">
                <h2 class="fw-bold green-text mb-4">POCKETREE</h2>

                <div class="container mt-4">
                    <partial name="_Alerts" />

                    <div class="row">
                    </div>
                </div>

                <form asp-controller="User" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-leaf"></i></span>
                        <input asp-for="Username" class="form-control border-start-0" placeholder="Username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>

                    <div class="mb-4 input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>

                    <button type="submit" class="btn btn-green w-100 rounded-pill py-2 fw-bold">LOGIN</button>

                    <div class="d-flex justify-content-between mt-3 small">
                        <a asp-controller="User" asp-action="Register" class="text-muted text-decoration-none">Sign Up</a>
                    </div>
                </form>
            </div>

            <div class="col-md-7 green-gradient-bg d-flex flex-column align-items-center justify-content-center p-5 text-white">
                <h1 class="fw-bold mb-4">GLOBAL GREEN MOVEMENT</h1>
                <img src="~/images/mission/sahara.png" alt="Green World Map" class="img-fluid mb-4" style="max-height: 300px;" />
                <button class="btn btn-light green-text rounded-pill px-5 fw-bold mb-3">Join the movement now!</button>
                <div class="download-badge bg-white text-dark rounded-pill px-3 py-1 small shadow-sm">
                    Download our Green App! <img src="~/images/app-stores.png" height="20" />
                </div>
            </div>
        </div>
    </div>
</div>