@model ADproject.Models.Entities.UserSettings

<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold text-success" href="@Url.Action("Status", "User")">
            <i class="bi bi-tree-fill"></i> Pocketree
        </a>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-end">
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-body p-4">
                <div class="mb-5">
                    <h4 class="mb-3">Settings</h4>
                    <div class="card-body p-4">
                        <form asp-action="UpdateSettings" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserID" />

                            <div class="form-check form-switch mb-4">
                                <input class="form-check-input" type="checkbox" asp-for="EmailNotification" id="emailSwitch">
                                <label class="form-check-label fw-bold" for="emailSwitch">
                                    Receive Email Notifications
                                </label>
                                <div class="form-text">Get updates on global missions and connect with green champions like you.</div>
                            </div>

                            <div class="form-check form-switch mb-4">
                                <input class="form-check-input" type="checkbox" asp-for="UseMlRecommendation" id="mlSwitch">
                                <label class="form-check-label fw-bold" for="mlSwitch">
                                    Allow Task Recommendations
                                </label>
                                <div class="form-text">Enable Machine Learning to suggest tasks based on your interests.</div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Theme" class="form-label fw-bold">Display Theme</label>
                                <select asp-for="Theme" class="form-select rounded-pill">
                                    <option value="Light">Light (Default)</option>
                                    <option value="Dark">Dark</option>
                                </select>
                            </div>

                            <hr />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success rounded-pill py-2 fw-bold">
                                    Save Changes
                                </button>
                                <a asp-action="Status" class="btn btn-link text-muted">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
