@model ADproject.Models.DTOs.UserRegistrationDto

<div class="landing-container d-flex align-items-center justify-content-center">
    <div class="card login-card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5 p-5 bg-white">
                <h2 class="fw-bold green-text mb-4">JOIN THE MOVEMENT</h2>
                <p class="text-muted small mb-4">Create your account to start growing your digital forest.</p>

                <form asp-controller="User" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control border-start-0" placeholder="Choose a Username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>

                    <div class="mb-3 input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Create Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>

                    <div class="mb-3 input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="Email" type="email" class="form-control border-start-0" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>

                    <button type="submit" class="btn btn-green w-100 rounded-pill py-2 fw-bold mt-3">CREATE ACCOUNT</button>

                    <div class="text-center mt-4 small">
                        <span class="text-muted">Already have an account?</span>
                        <a asp-controller="Home" asp-action="Index" class="green-text fw-bold text-decoration-none">Login here</a>
                    </div>
                </form>
            </div>

            <div class="col-md-7 green-gradient-bg d-flex flex-column align-items-center justify-content-center p-5 text-white">
                <h1 class="fw-bold mb-3">EVERY ACTION COUNTS</h1>
                <p class="text-center mb-4">Your journey to a greener planet starts with a single step.</p>
                <img src="~/images/tree-growth-stages.png" alt="Tree Growth Animation" class="img-fluid mb-4" style="max-height: 250px;" />
            </div>
        </div>
    </div>
</div>