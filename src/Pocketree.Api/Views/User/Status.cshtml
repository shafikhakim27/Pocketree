<div class="container mt-4">
    <partial name="_Alerts" />

    <div class="row">
    </div>
</div>

<!-- Display Digital Tree -->
<div class="container py-5 text-center">
    <h2 class="fw-bold green-dark-text mb-5">YOUR DIGITAL FOREST</h2>

    <div class="row justify-content-center align-items-end mb-4">
        <div class="col-4 @(Model.UserProfile.LevelID != 1 ? "opacity-50" : "")">
            <div class="tree-container d-inline-block">
                <img src="~/images/levels/seedling.png" class="img-fluid level-img @(Model.UserProfile.LevelID == 1 ? "border-success border-2 rounded-circle p-2 shadow" : "")" />
                @if (Model.UserProfile.LevelID == 1)
                {
                    @if (Model.UserProfile.IsWithered)
                    {
                        <img src="~/images/faces/sad_face.png" class="tree-face" alt="Sad Face" />
                    }
                    else
                    {
                        <img src="~/images/faces/happy_face.png" class="tree-face" alt="Happy Face" />
                    }
                }
            </div>
        </div>

        <div class="col-4 @(Model.UserProfile.LevelID != 2 ? "opacity-50" : "")">
            <div class="tree-container d-inline-block">
                <img src="~/images/levels/sapling.png" class="img-fluid level-img @(Model.UserProfile.LevelID == 2 ? "border-success border-2 rounded-circle p-2 shadow" : "")" />
                @if (Model.UserProfile.LevelID == 2)
                {
                    @if (Model.UserProfile.IsWithered)
                    {
                        <img src="~/images/faces/sad_face.png" class="tree-face" alt="Sad Face" />
                    }
                    else
                    {
                        <img src="~/images/faces/happy_face.png" class="tree-face" alt="Happy Face" />
                    }
                }
            </div>
        </div>

        <div class="col-4 @(Model.UserProfile.LevelID != 3 ? "opacity-50" : "")">
            <div class="tree-container d-inline-block">
                <img src="~/images/levels/tree.png" class="img-fluid level-img @(Model.UserProfile.LevelID == 3 ? "border-success border-2 rounded-circle p-2 shadow" : "")" />
                @if (Model.UserProfile.LevelID == 3)
                {
                    @if (Model.UserProfile.IsWithered)
                    {
                        <img src="~/images/faces/sad_face.png" class="tree-face" alt="Sad Face" />
                    }
                    else
                    {
                        <img src="~/images/faces/happy_face.png" class="tree-face" alt="Happy Face" />
                    }
                }
            </div>
        </div>

        @if (Model.UserProfile.IsWithered)
        {
            <div class="text-center mt-3">
                <form asp-action="WaterTree" method="post">
                    <button type="submit" class="btn btn-info rounded-pill px-4 fw-bold">
                        <i class="bi bi-droplet-fill me-2"></i>WATER TREE
                    </button>
                </form>
            </div>
        }
    </div>

    @{
        // Get thresholds, 250 for Sapling and 500 for Mighty Oak 
        int nextGoal = Model.UserProfile.TotalCoins < 250 ? 250 : 500;

        // Calculate percentage and ensure it doesn't exceed 100%
        double percent = (double)Model.UserProfile.TotalCoins / nextGoal * 100;
        if (percent > 100) percent = 100;
    }

    <!-- Progressbar in percentage -->
    <div class="progress w-50 mx-auto rounded-pill mb-2" style="height: 10px;">
        <div class="progress-bar bg-success"
            role="progressbar"
            style="width: @percent%">
        </div>
    </div>

    <p class="small text-center">@Model.UserProfile.TotalCoins / @nextGoal Coins</p>
    <p class="small text-muted text-uppercase fw-bold">Current Stage: @Model.UserProfile.LevelName</p>

    <!-- Display avatar and username -->
    <div class="d-flex align-items-center justify-content-center my-5">
        <img src="~/images/avatar/avatar.png" class="rounded-circle shadow-sm me-3" width="60" />
        <div class="text-start">
            <h5 class="fw-bold mb-0">@Model.UserProfile.Username</h5>
            <span class="text-muted small">LEVEL @Model.UserProfile.LevelID - GREEN GUARDIAN</span>
        </div>
    </div>

    <!-- Display history of activites that have been completed and the score -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm p-4 h-100 rounded-4">
                <h6 class="fw-bold mb-4">PAST ACTIVITIES</h6>

                <div style="max-height: 250px; overflow-y: auto; padding-right: 10px;">
                    <ul class="list-unstyled text-start">
                        @if (Model.TaskHistory != null && Model.TaskHistory.Any())
                        {
                            @foreach (var activity in Model.TaskHistory)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Completed on @activity.DateCompleted: @activity.TaskDescription [@activity.CoinsEarned coins]
                                </li>
                            }
                        }
                        else
                        {
                            <li class="text-muted small">No activities recorded yet. Start your first quest!</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card border-0 shadow-sm p-4 h-100 rounded-4 d-flex flex-column justify-content-center">
                <h6 class="fw-bold mb-4">QUEST STATISTICS</h6>
                <div class="d-flex align-items-center justify-content-center">
                    <img src="~/images/skins/leaf-icon.png" height="50" class="me-3" />
                    <div class="text-start">
                        <p class="mb-0 small text-muted fw-bold">TOTAL SCORE: @Model.UserProfile.TotalCoins COINS</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
