@model ADproject.Models.Entities.User

<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold text-success" href="@Url.Action("Status", "User")">
            <i class="bi bi-tree-fill"></i> Pocketree
        </a>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-end">
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-body p-4">
                <div class="mb-5">
                    <h4 class="mb-3">Profile Details</h4>
                    
                    <div class="d-flex align-items-center mt-4">
                        <div class="me-4">
                            <img src="@(Model.ProfileImageURL ?? "/images/default-user.png")"
                                class="rounded-circle border mb-3" style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>
                
                        <div class="flex-grow-1">
                            <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="mb-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Change Profile Picture</label>
                                    <input type="file" name="profileFile" class="form-control form-control-sm mb-2" accept="image/*" required />
                                </div> 
                                <button type="submit" class="btn btn-sm btn-success">Update Photo</button>
                            </form>
                        </div>
                    </div>

                    <label class="text-muted small">Username</label>
                    <p class="fs-5 fw-bold">@Model.Username</p>
                    <label class="text-muted small">Email Address</label>
                    <p class="fs-5 fw-bold">@Model.Email</p>
                    <label class="text-muted small">Last Login Date</label>
                    <p class="fs-5 fw-bold">@Model.LastLoginDate</p>
                </div>
            </div>
        </div>
    </div>
</div>

